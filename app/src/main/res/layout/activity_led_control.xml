<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ledControl">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED Controller "
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="20dp" />


    <Button
        android:id="@+id/discnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:text="disconnect"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">


        <TableRow
            android:id="@+id/row1"
            android:layout_width="398dp"
            android:layout_height="82dp"
            android:padding="10dp">

            <Button
                android:id="@+id/seedrop"
                android:layout_width="88dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:background="@drawable/rou"
                android:paddingRight="10dp"
                android:text="seeddrop"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/moveforward"
                android:layout_width="88dp"
                android:layout_height="37dp"

                android:layout_margin="5dp"
                android:background="@drawable/round"
                android:text="MF"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/left"
                android:layout_width="88dp"
                android:layout_height="37dp"

                android:layout_margin="5dp"
                android:background="@drawable/round"
                android:text="L"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="411dp"
            android:layout_height="90dp"
            android:padding="10dp">

            <Button
                android:id="@+id/right"
                android:layout_width="88dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:background="@drawable/round"
                android:text="R"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/movebackward"
                android:layout_width="88dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:background="@drawable/round"
                android:text="MB"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/stop"
                android:layout_width="88dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:background="@drawable/round"
                android:text="STOP"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <Button
                android:id="@+id/automatic"
                android:layout_width="88dp"
                android:layout_height="37dp"
                android:background="@drawable/round"
                android:text="AM"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/dibbler"
                android:layout_width="88dp"
                android:layout_height="37dp"
                android:layout_margin="5dp"
                android:background="@drawable/round"
                android:text="DB"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </TableRow>
    </TableLayout>

</RelativeLayout>